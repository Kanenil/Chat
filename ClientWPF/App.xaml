<Application x:Class="ClientWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClientWPF">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Theme/ContactCard.xaml"/>
                <ResourceDictionary Source="Views/Theme/ChatItem.xaml"/>
                <ResourceDictionary Source="Views/Theme/MessageBox.xaml"/>
                <ResourceDictionary Source="Views/Theme/StylishScrollbar.xaml"/>
                <ResourceDictionary Source="Views/Theme/CommonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <FontFamily x:Key="SansGG">pack://application:,,,/Views/Fonts/#Sans GG</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
